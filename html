    <title>F1 Mission Control</title>
    <style>
        /* CSS: The "Look" */
        :root {
            --petronas: #00A19B;
            --carbon: #121212;
            --glass: rgba(255, 255, 255, 0.05);
        }
        body {
            background-color: var(--carbon);
            color: white;
            font-family: 'Segoe UI', sans-serif;
            margin: 0; padding: 20px;
        }
        .header { border-bottom: 2px solid var(--petronas); padding-bottom: 10px; margin-bottom: 30px; }
        
        /* The Grid Layout */
        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        /* Dashboard "Boxes" */
        .card {
            background: var(--glass);
            border: 1px solid rgba(255,255,255,0.1);
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }
        .card h3 { color: var(--petronas); margin-top: 0; font-size: 0.8rem; letter-spacing: 2px; }
        .big-number { font-size: 3rem; font-weight: bold; margin: 10px 0; }
        
        button {
            background: var(--petronas);
            border: none; color: white; padding: 10px;
            width: 100%; border-radius: 5px; cursor: pointer;
        }
