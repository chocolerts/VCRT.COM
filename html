<body>

    <div class="header">
        <h1>COMMAND CENTER <span style="font-weight: 200;">v1.0</span></h1>
    </div>

    <div class="dashboard-grid">
        <div class="card">
            <h3>LIVE SPEED</h3>
            <div class="big-number" id="speedText">0</div>
            <p>KM/H</p>
        </div>

        <div class="card">
            <h3>DRIVER STATUS</h3>
            <div class="big-number" id="statusBox" style="font-size: 1.5rem; color: #50fa7b;">READY</div>
            <button onclick="toggleStatus()">Change Status</button>
        </div>

        <div class="card">
            <h3>NOTES</h3>
            <textarea id="noteArea" style="width:100%; background:none; color:white; border:1px solid #444; border-radius:5px;" placeholder="Type here..."></textarea>
        </div>
    </div>

    <script>
        // JS: The "Brain"
        
        // 1. Simulate Live Speed
        setInterval(() => {
            const speed = Math.floor(Math.random() * 20) + 310; // Random F1 speed
            document.getElementById('speedText').innerText = speed;
        }, 1000);

        // 2. Toggle Status
        function toggleStatus() {
            const box = document.getElementById('statusBox');
            if(box.innerText === "READY") {
                box.innerText = "IN PITS";
                box.style.color = "#ff5555";
            } else {
                box.innerText = "READY";
                box.style.color = "#50fa7b";
            }
        }

        // 3. Save Notes automatically
        const area = document.getElementById('noteArea');
        area.value = localStorage.getItem('userNote') || "";
        area.addEventListener('input', () => {
            localStorage.setItem('userNote', area.value);
        });
    </script>
</body>
